{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "outDir": "build",
        "typeRoots": [
            "..node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "server/**/*.ts",
        "server/*/*.ts"
    ],
    "exclude": [
        "node_modules",
    ],
    "compileOnSave": true,
    "buildOnSave": true,
    "files": [
        "core.ts",
        "sys.ts",
        "types.ts",
        "scanner.ts",
        "parser.ts",
        "utilities.ts",
        "binder.ts",
        "checker.ts",
        "emitter.ts",
        "program.ts",
        "commandLineParser.ts",
        "tsc.ts",
        "diagnosticInformationMap.generated.ts"
    ]
}